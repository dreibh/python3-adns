#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


%:
	dh $@ --with python3

override_dh_auto_build:
	python3 setup.py build ; \

# Use setup.py to install the API module into the right directory.
override_dh_auto_install:
	# NOTE: This is for the package "python3-adns", hence the following --root parameter!
	python3 setup.py install --install-layout=deb --root $(CURDIR)/debian/python3-adns ; \
